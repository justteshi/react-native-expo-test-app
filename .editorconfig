root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# JSON, YAML, JavaScript, TypeScript, JSX, TSX
[*.{js,jsx,ts,tsx,json,yml,yaml}]
indent_style = space
indent_size = 2

# Markdown files — keep whitespace
[*.md]
trim_trailing_whitespace = false

# Shell scripts
[*.sh]
indent_style = space
indent_size = 2

# Package.json — keep consistent formatting
[package.json]
indent_style = space
indent_size = 2